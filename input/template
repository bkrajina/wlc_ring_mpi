NB 100
#Is polymer a ring (1 or 0)
RING 1
#Include twist energy (1 or 0)?
TWIST 1
#Polymer linking number (integer)
LK 0
#Include polymer steric repulsion interactions?
INTON 1
#Strength of steric repulsion (normalized to kT)
VHC = 1.0
#Hard-core repulsion diameter
LHC = 2.0
